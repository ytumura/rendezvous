<%= render :partial => "/_parts/links" %>

<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_post_path(@post) %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Tags:</strong>
  <%- @post.tags.each do |tag| %>
    <%= link_to tag.name, "/tags/#{tag.name[1..-1]}" %>
  <%- end %>
</p>

<p>
  <strong>Users:</strong>
  <%= @post.user_list.join(', ') %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content_html %>
</p>
